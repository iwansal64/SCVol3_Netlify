<style>
	div.first-loading {
		position: absolute;
		width: 100vw;
		height: 100vh;
		background: #2f9;
		z-index: 1000;
		display:flex;
		justify-content:center;
		align-items:center;
		flex-direction: column;
		gap: 10px;
		animation-name: first_loading_collapse;
		animation-duration: 5s;
		animation-iteration-count: 1;
		animation-timing-function: linear;
		transform: translateX(-100%);
	}

	div.first-loading div {
		overflow: hidden;
		width: fit-content;
		height: fit-content;
	}

	div.first-loading span {
		background: #000;
		width: 200px;
		height: 20px;
		display: block;
		border-radius: 25px;
		animation-name: first_loading_bar;
		animation-duration: 1s;
		animation-iteration-count: 3;
		animation-timing-function: linear;
		transform: translateX(-100%);
	}

	div.first-loading div:nth-child(1) span {
		animation-delay: 0s;
	}

	div.first-loading div:nth-child(2) span {
		animation-delay: 0.25s;
	}

	div.first-loading div:nth-child(3) span {
		animation-delay: 0.5s;
	}

	@keyframes first_loading_bar {
		0% {
			transform: translateX(-100%);
		}
		100% {
			transform: translateX(100%);
		}
	}

	@keyframes first_loading_collapse {
		0% {
			transform: translateY(0);
		}
		80% {
			transform: translateY(0);
		}
		100% {
			transform: translateY(-100%);
		}
	}
	
	html {
		scroll-behavior: smooth;
	}
	
	* {
		margin:0;
		padding:0;
		font-family:calibri;
		color: white
	}

	a, button {
		cursor: pointer;
	}
	
	body {
		overflow-x: hidden;
		background-color: #333;
		display: flex;
		flex-direction: column;
		animation-name: body_overflow;
		animation-duration: 5s;
		animation-iteration-count: 1;
		animation-fill-mode: forwards;
	}

	@keyframes body_overflow {
		0% {
			overflow-y: hidden;
		}
		80% {
			overflow-y: hidden;
		}
		100% {
			overflow-y: auto;
		}
	}

	section {
		width: 100vw;
		min-height: 100vh;
		display: flex;
		flex-direction: column;
	}
	
	.background {
		width: 100vw;
		min-width: 500px;
		height: fit-content;
		position: absolute;
		z-index: -100;
		filter: brightness(25%);
	}

	.navbar {
		padding: 20px;
		width: 80vw;
		border-radius: 0 0 25px 25px;
		background: #00000099;
		position: fixed;
		left: 50%;
		transform: translateX(-50%);
		display: grid;
		grid-auto-flow: column;
		gap: 20px;
	}

	.navbar > .logo {
		display: flex;
		align-items: center;
	}

	.navbar > .logo > .title {
		margin-left: 10px;
	}
	
	.navbar > .links {
		display:flex;
		justify-content:center;
		align-items:center;
		justify-self: end;
		gap: 5px
	}

	.navbar > .links > a {
		text-decoration: none;
		padding: 10px 20px;
		border-radius: 15px;
		transition-duration: 0.2s;
	}

	.navbar > .links > a.active {
		background-color: #eee;
		color: black;
	}

	.navbar > .links > a:hover {
		background-color: #eeeeee55;
